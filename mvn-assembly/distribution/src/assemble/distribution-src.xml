    <fileSets>
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>readme.md</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../conf</directory>
        </fileSet>
    </fileSets>
</assembly>

